        printf("Process  %d is allocated with PID %d \n",tid,id+MIN_PID);
    
        
        sleep(10);

        printf("Process (%d) PID (%3d) Released after %d sec\n",tid,id+MIN_PID,10);
        release_pid(id);
       
    }
    
    pthread_exit(NULL);
    
} 

