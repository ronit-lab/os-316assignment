#include<stdio.h>
#include<stdlib.h>
#include<time.h>
#include<unistd.h>
#include<pthread.h>
#include<sys/types.h>
#define MIN_PID 100
#define MAX_PID 1000



int bit_map[MAX_PID-MIN_PID]={0};
int allocate_map()
{
for(int i=0; i< MAX_PID;i++)
bit_map[i]=0;
}

int allocate_pid(void){
    int i,flag=1;
    for(i=0; i<MAX_PID-MIN_PID; i++){
        if(bit_map[i]==0){
           
            bit_map[i]=1;
	        
            flag=0;
            break;
        }
    }
    return flag?-1:i;
}
void release_pid(int id){
    bit_map[id]=0;
}
void *threading(void *az){
    int tid =  *(( int* )az);
    
    
    int id = allocate_pid();


    if(id==-1){
        printf("No PID available.");
    }
    else{
        printf("Thread  %d is allocated with PID %d \n",tid,id+MIN_PID);
        
        
        
        sleep(10);

        printf("Thread (%d) PID (%3d) Released after %d sec\n",tid,id+MIN_PID,10);
        release_pid(id);
       
    }
    
    pthread_exit(NULL);
    
} 
void *processin(void *az){
    int tid =  *(( int* )az);
    
    
    int id = allocate_pid();


    if(id==-1){
        printf("No PID available.");
